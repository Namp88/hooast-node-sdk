{
  "name": "@hoosat/node-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for communicating with Hoosat nodes via gRPC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/protos/*.proto dist",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "example:get-notify-utxos-changed-subscribe": "tsx watch examples/get-notify-utxos-changed-subscribe.ts",
    "example:get-current-network": "tsx watch examples/get-current-network.ts",
    "example:get-peer-addresses": "tsx watch examples/get-peer-addresses.ts",
    "example:get-selected-tip-hash": "tsx watch examples/get-selected-tip-hash.ts",
    "example:get-mempool-entry": "tsx watch examples/get-mempool-entry.ts",
    "example:get-mempool-entries": "tsx watch examples/get-mempool-entries.ts",
    "example:get-block": "tsx watch examples/get-block.ts",
    "example:get-blocks": "tsx watch examples/get-blocks.ts",
    "example:get-block-count": "tsx watch examples/get-block-count.ts",
    "example:get-block-dag-info": "tsx watch examples/get-block-dag-info.ts",
    "example:utxos-and-blue-score": "tsx watch examples/utxos-and-blue-score.ts",
    "example:get-info": "tsx watch examples/get-info.ts",
    "example:network-hashrate": "tsx watch examples/network-hashrate.ts",
    "example:wallet-balances": "tsx watch examples/wallet-balances.ts",
    "example:pending-transactions-and-supply": "tsx watch examples/pending-transactions-and-supply.ts",
    "example:send-transaction": "tsx watch examples/send-transaction.ts",

    "test:crypto": "tsx examples/test-crypto-functionality.ts",
    "test:crypto:full": "tsx examples/test-crypto-functionality.ts full",
    "test:crypto:quick": "tsx examples/test-crypto-functionality.ts quick",
    "test:crypto:errors": "tsx examples/test-crypto-functionality.ts errors",
    "test:diagnose-address-validation": "tsx examples/diagnose-address-validation.ts"
  },
  "keywords": [
    "hoosat",
    "htn",
    "blockchain",
    "grpc",
    "sdk",
    "cryptocurrency",
    "node",
    "client"
  ],
  "author": "Andrei Kliubchenko, namp2988@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Namp88/hooast-node-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Namp88/hooast-node-sdk/issues"
  },
  "homepage": "https://github.com/Namp88/hooast-node-sdk#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "blake3": "^2.1.7",
    "secp256k1": "^5.0.0",
    "bech32": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/secp256k1": "^4.0.6",
    "copyfiles": "^2.4.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
