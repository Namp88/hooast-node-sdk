{
  "name": "hoosat-sdk",
  "version": "0.2.2",
  "description": "TypeScript SDK for Hoosat blockchain: full node integration, crypto utilities, real-time UTXO streaming, transaction building, dynamic fee estimation, and QR code generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias && copyfiles -u 1 src/protos/*.proto dist",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "release:dry": "standard-version --dry-run",
    "push:tags": "git push --follow-tags origin master"
  },
  "keywords": [
    "hoosat",
    "htn",
    "blockchain",
    "grpc",
    "sdk",
    "cryptocurrency",
    "node",
    "client"
  ],
  "author": "Andrei Kliubchenko, namp2988@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Namp88/hoosat-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Namp88/hoosat-sdk/issues"
  },
  "homepage": "https://github.com/Namp88/hoosat-sdk#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "bech32": "^2.0.0",
    "blake3": "^2.1.7",
    "qrcode": "^1.5.4",
    "secp256k1": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/qrcode": "^1.5.5",
    "@types/secp256k1": "^4.0.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "copyfiles": "^2.4.1",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
