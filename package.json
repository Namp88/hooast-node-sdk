{
  "name": "hoosat-sdk",
  "version": "0.1.0",
  "description": "Comprehensive TypeScript SDK for Hoosat blockchain: node communication, cryptographic utilities, real-time streaming, and transaction building",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/protos/*.proto dist",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",

    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",

    "example:address:balance": "tsx examples/address/01-balance.ts",
    "example:address:balances-multiple": "tsx examples/address/02-balances-multiple.ts",
    "example:address:utxos": "tsx examples/address/03-utxos.ts",
    "example:crypto:generate-keypair": "tsx watch examples/crypto/01-generate-keypair.ts",
    "example:crypto:import-keypair": "tsx watch examples/crypto/02-import-keypair.ts",
    "example:crypto:address-types": "tsx watch examples/crypto/03-address-types.ts",
    "example:crypto:hashing": "tsx watch examples/crypto/04-hashing.ts",
    "example:error-handling:network-errors": "tsx watch examples/error-handling/01-network-errors.ts",
    "example:error-handling:transaction-errors": "tsx watch examples/error-handling/02-transaction-errors.ts",
    "example:error-handling:retry-strategies": "tsx watch examples/error-handling/03-retry-strategies.ts",
    "example:monitoring:track-balance-changes": "tsx watch examples/monitoring/01-track-balance-changes.ts",
    "example:monitoring:network-stats": "tsx watch examples/monitoring/02-network-stats.ts",
    "example:advanced:multi-recipient-batching": "tsx watch examples/advanced/01-multi-recipient-batching.ts",
    "example:node:connect": "tsx examples/node/01-connect.ts",
    "example:node:blockchain-info": "tsx examples/node/02-blockchain-info.ts",
    "example:node:blocks": "tsx examples/node/03-blocks.ts",
    "example:node:mempool": "tsx examples/node/04-mempool.ts",
    "example:streaming:subscribe-utxos": "tsx watch examples/streaming/01-subscribe-utxos.ts",
    "example:transaction:build-simple": "tsx watch examples/transaction/01-build-simple.ts",
    "example:transaction:build-with-change": "tsx watch examples/transaction/02-build-with-change.ts",
    "example:transaction:multiple-inputs": "tsx watch examples/transaction/03-multiple-inputs.ts",
    "example:transaction:estimate-fee": "tsx watch examples/transaction/04-estimate-fee.ts",
    "example:transaction:send-real": "tsx watch examples/transaction/05-send-real.ts",
    "example:transaction:dynamic-fees": "tsx watch examples/transaction/06-dynamic-fees.ts",
    "example:transaction:send-real-batch": "tsx watch examples/transaction/07-send-real-batch.ts",
    "example:transaction:consolidate-utxos": "tsx watch examples/transaction/08-consolidate-utxos.ts",
    "example:transaction:split-utxo": "tsx watch examples/transaction/09-split-utxo.ts",
    "example:utils:amount-conversion": "tsx watch examples/utils/01-amount-conversion.ts",
    "example:utils:validation": "tsx watch examples/utils/02-validation.ts",
    "example:utils:formatting": "tsx watch examples/utils/03-formatting.ts"
  },
  "keywords": [
    "hoosat",
    "htn",
    "blockchain",
    "grpc",
    "sdk",
    "cryptocurrency",
    "node",
    "client"
  ],
  "author": "Andrei Kliubchenko, namp2988@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Namp88/hoosat-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Namp88/hoosat-sdk/issues"
  },
  "homepage": "https://github.com/Namp88/hoosat-sdk#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "blake3": "^2.1.7",
    "secp256k1": "^5.0.0",
    "bech32": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/secp256k1": "^4.0.6",
    "copyfiles": "^2.4.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
